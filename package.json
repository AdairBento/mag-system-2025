{
  "name": "mag-system-webapp",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "dev:web": "pnpm --filter @mag/web dev",
    "dev:api": "pnpm --filter @mag/api dev",
    "dev:all": "pnpm -r --parallel --stream --no-bail dev",
    "dev": "pnpm -w run dev:all",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint -- --fix",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push",
    "audit:all": "pnpm audit:format && pnpm audit:lint && pnpm audit:typecheck && pnpm audit:build && pnpm audit:db && pnpm audit:security",
    "audit:format": "prettier . --check",
    "audit:lint": "pnpm -r lint",
    "audit:typecheck": "pnpm -r typecheck",
    "audit:build": "pnpm -r build",
    "audit:db": "pnpm -C packages/database exec prisma validate && pnpm -C packages/database exec prisma generate",
    "audit:security": "pnpm audit --prod"
  },
  "pnpm": {
    "overrides": {
      "js-yaml": "^4.1.1",
      "qs": "^6.14.1"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/node": "22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "prisma": "5.22.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  }
}
